<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_typeNoti_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/notification"
        android:textColor="#3C3F41"
        app:layout_constraintEnd_toStartOf="@+id/tv_date_list"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="00/00/00"
        app:layout_constraintBottom_toBottomOf="@+id/tv_typeNoti_list"
        app:layout_constraintEnd_toStartOf="@+id/tv_time_list"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_typeNoti_list"
        app:layout_constraintTop_toTopOf="@+id/tv_typeNoti_list" />

    <TextView
        android:id="@+id/tv_time_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="00:00:00"
        app:layout_constraintBottom_toBottomOf="@+id/tv_date_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_date_list"
        app:layout_constraintTop_toTopOf="@+id/tv_date_list" />

</android.support.constraint.ConstraintLayout>